<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0"
        android:layout_weight="3"
        android:background="@mipmap/wenyin_back"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/bianshi_main_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen0"
            android:layout_gravity="center"
            android:layout_weight="5.5"
            android:src="@mipmap/wenyin_dou1" />

        <ImageView
            android:id="@+id/bianshi_pinyin_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen0"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:src="@mipmap/duo_03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/wenyin_kuang"
                android:paddingLeft="@dimen/dimen5"
                android:paddingRight="@dimen/dimen5">

                <ImageView
                    android:id="@+id/zi_img1"
                    style="@style/bianshi_zi_img_style"
                    android:src="@mipmap/sa_03" />

                <ImageView
                    android:id="@+id/zi_img2"
                    style="@style/bianshi_zi_img_style"
                    android:src="@mipmap/sa_05" />

                <ImageView
                    android:id="@+id/zi_img3"
                    style="@style/bianshi_zi_img_style"
                    android:src="@mipmap/sa_07" />

                <ImageView
                    android:id="@+id/zi_img4"
                    style="@style/bianshi_zi_img_style"
                    android:src="@mipmap/sa_09" />

                <ImageView
                    android:id="@+id/zi_img5"
                    style="@style/bianshi_zi_img_style"
                    android:src="@mipmap/sa_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wenyin_bianshi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/record_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/wenyin_kaishibianshi" />

        <ImageView
            android:id="@+id/bianshi_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/wenyin_history_record" />

    </RelativeLayout>


</LinearLayout>