<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yueyao_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bianshibaogao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/baogao_right"
                android:gravity="center"
                android:text="评估报告"
                android:textColor="#0088ff"
                android:textSize="@dimen/size15" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dimen20"
                android:layout_gravity="center"
                android:background="@mipmap/baogao_fengexian" />

            <TextView
                android:id="@+id/tiaolijianyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/baogao_left"
                android:gravity="center"
                android:text="干预方案"
                android:textColor="#333333"
                android:textSize="@dimen/size15" />
        </LinearLayout>
        <!-- 辨识报告 view -->

        <LinearLayout
            android:id="@+id/bianshibaogao_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gongfa_zhuangtai_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_zhuangtaijielun" />
                    <!-- <ImageView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bj_2_1"/> -->

                    <TextView
                        android:id="@+id/bianshibaogao_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />

                    <ImageView
                        android:id="@+id/gongfa_jiexi_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:src="@mipmap/baogao_zhuangtaijiexi" />
                    <!-- <ImageView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bj_2_1"/> -->
                    <TextView
                        android:id="@+id/bianshibaogao_jiexi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <!-- 调理建议 view -->
        <LinearLayout
            android:id="@+id/tiaolijianyi_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/dimen10"
                        android:paddingTop="@dimen/dimen10"
                        android:src="@mipmap/bg_jingluotiaoli"
                        android:visibility="gone" />/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/bj_2_1"
                        android:visibility="gone" />/>

                    <TextView
                        android:id="@+id/jingluotiaoli_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:maxLines="4"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingRight="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen20"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:visibility="gone" />/>


                    <ImageView
                        android:id="@+id/gongfa_shanshi_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_shanshi" />

                    <TextView
                        android:id="@+id/shanshitiaoli_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />

                    <ImageView
                        android:id="@+id/yueyao_tiaoli_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_yueyao" />

                    <TextView
                        android:id="@+id/leyaotiaoli_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />


                    <ImageView
                        android:id="@+id/erxue_tiaoli_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_erxue" />

                    <TextView
                        android:id="@+id/erxue_tiaoli_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3"
                        android:text="" />

                    <ImageView
                        android:id="@+id/erxue_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:paddingBottom="@dimen/dimen5"
                        android:paddingTop="@dimen/dimen5"
                        android:src="@mipmap/erxue_img" />

                    <TextView
                        android:id="@+id/erxue_tiaoli_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:lineSpacingMultiplier="1.3"
                        android:text=""

                        />


                    <ImageView
                        android:id="@+id/gongfa_tiaoli_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_yundong" />

                    <TextView
                        android:id="@+id/gongfatiaoli_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />


                    <ImageView
                        android:id="@+id/ciliao_tiaoli_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen22"
                        android:src="@mipmap/baogao_xuewei" />

                    <TextView
                        android:id="@+id/ciliaotiaoli_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen29"
                        android:layout_marginRight="@dimen/dimen29"
                        android:layout_marginTop="@dimen/dimen16"
                        android:lineSpacingMultiplier="1.3" />


                    <ImageView
                        android:id="@+id/ciliao_jingluo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen10"
                        android:paddingBottom="@dimen/dimen10"
                        android:paddingTop="@dimen/dimen5" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>